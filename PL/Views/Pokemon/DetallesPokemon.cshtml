@model ML.Pokemon
@{
    ViewData["Title"] = "DetallesPokemon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    <link rel="stylesheet" href="~/css/InformacionDetallada.css" />
</head>

<section id="Pantalla-Dividida">

    <div class="Izquierda">
        @if (Model.Imagen != null)
        {
            <img id="Img" src=@Model.Imagen style="width:500px ; height:500px" />
        }
        else
        {
            <img id="Img" src="~/Imagenes/PokemonDef.jpg" style="width:250px ; height:250px" />
        }
    </div>

    <div class="derecha">

        <form class="Fomulario">
            <div class="Logo">
                <img src="https://upload.wikimedia.org/wikipedia/commons/9/98/International_Pok%C3%A9mon_logo.svg" width="280px" height="280px" />
            </div>
            <div class="form-group">
                <label class="Nombre">Nombre Pokemon:</label>
                <br />
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control",autocomplete = "off", id="TxtNombre" })
            </div>
            <div class="form-group">
                <label class="Nombre">Experiencia:</label>
                <br />
                @Html.TextBoxFor(model => model.Experiencia, new { @class = "form-control",autocomplete = "off" })
            </div>
            <div class="form-group">
                <label class="Nombre">Habilidad:</label>
                <br />
                @Html.TextBoxFor(model => model.Habilidad, new { @class = "form-control",autocomplete = "off"})
            </div>
            <div class="form-group">
                <label class="Nombre">Tipo:</label>
                <br />
                @Html.TextBoxFor(model => model.Tipo, new { @class = "form-control",autocomplete = "off"})
            </div>

            <div class="text-center my-4">
                <a href="@Url.Action("GetPokemonTipo", "Pokemon", new {urlTipo = Model.TipoUrl})" class="btn btn-success">Tipos Similares<i class="bi bi-cart3" style="color: khaki"></i> </a>
            </div>

        </form>

    </div>
</section>



